@model List<Category>



<section class="panel">
    <header class="panel-heading">
        Yeni kategori eklemek icin <a asp-action="Create" asp-controller="Category">tıklayınız</a>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Kategori Id</th>
                        <th>Kategori ismi</th>
                        <th class="hidden-phone">Kategori Acıklaması</th>
                        <th class="hidden-phone">Kategori Durumu</th>
                        <th class="hidden-phone">Güncelle</th>
                        <th class="hidden-phone">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Category item in Model)
                    {
                        <tr class="gradeX">
                            <td>@item.Id</td>
                            <td>
                               @item.CategoryName
                            </td>
                            <td class="hidden-phone">@item.Description</td>
                            <td class="hidden-phone">@item.Status</td>
                            <td class="center hidden-phone"> <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a> </td>
                            <td class="center hidden-phone"><a asp-action="Pacify" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }

                  
                   
                </tbody>
            </table>

        </div>
    </div>
</section>
<!-- page end-->